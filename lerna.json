{
  "version": "independent",
  "packages": [
    "example",
    "components/*",
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "nohoist": [
        "example"
      ]
    },
    "run": {
      "stream": true,
      "parallel": true
    },
    "exec": {
      "stream": true,
      "parallel": true
    },
    "version": {
      "allowBranch": "master"
    }
  }
}
